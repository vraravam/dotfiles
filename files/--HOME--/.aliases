# delete all personal data before re-imaging the laptop
implode() {
  sudo rm -rfv "${HOME}"/.[a-z]*

  local folders=(
    "${HOME}/personal"
    "${HOMEBREW_BUNDLE_FILE}"
    "${HOMEBREW_PREFIX}"
    "${PROJECTS_BASE_DIR}"
  )
  for f in "${folders[@]}"; do
    sudo rm -rfv "${f}"*
  done
}

